            },
            "OpenRosaPayload": {
                "type": "object",
                "properties": {
                    "xml_submission_file": {
                        "type": "string"
                    }
                },
                "required": [
                    "xml_submission_file"
                ]
            },
            "OpenRosaResponse": {
                "type": "object",
                "properties": {
                    "message": {
                        "type": "string"
                    },
                    "submissionMetadata": {
                        "type": "object",
                        "properties": {
                            "id": {
                                "type": "string"
                            },
                            "instanceID": {
                                "type": "string"
                            },
                            "submissionDate": {
                                "type": "string",
                                "format": "date-time"
                            },
                            "markedAsCompleteDate": {
                                "type": "string",
                                "format": "date-time"
                            },
                            "isComplete": {
                                "type": "boolean"
                            }
                        }
                    }
                },
                "required": [
                    "message",
                    "submissionMetadata"
                ]
            },
            "XFormList": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "formID": {
                            "type": "string"
                        },
                        "name": {
                            "type": "string"
                        },
                        "majorMinorVersion": {
                            "type": "string"
                        },
                        "version": {
                            "type": "string"
                        },
                        "hash": {
                            "type": "string"
                        },
                        "description": {
                            "type": "string"
                        },
                        "downloadUrl": {
                            "type": "string",
                            "format": "uri",
