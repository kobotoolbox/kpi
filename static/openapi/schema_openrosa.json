            "OpenRosaFormManifestResponse": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "filename": {
                            "type": "string"
                        },
                        "hash": {
                            "type": "string"
                        },
                        "downloadUrl": {
                            "type": "string",
                            "format": "uri",
                            "example": "https://kf.kobotoolbox.org/xformsMedia/123/456.jpg"
